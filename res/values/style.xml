<resources>

    <style name="Theme"
           parent="android:style/Theme" />

    <style name="Theme.TerminalApp"
           parent="android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TerminalApp"/>

    <style name="TerminalApp.text"/>
    <style name="TerminalApp.text.clock"/>
    <style name="TerminalApp.text.clock.big">
        <item name="android:textColor">#F0ffffff</item>
        <item name="android:textSize">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.clock.small">
        <item name="android:textColor">#F0ffffff</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main">
        <item name="android:textColor">#CF000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.small">
        <item name="android:textColor">#CF000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.small.white">
        <item name="android:textColor">#FFffffff</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.white">
        <item name="android:textColor">#DFffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.whiteBold">
        <item name="android:textColor">#FFffffff</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.whiteBold.small">
        <item name="android:textColor">#FFffffff</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.hidden">
        <item name="android:textColor">#70000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.bold">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.main.bold.big">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.small">
        <item name="android:textColor">#FFffffff</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.status"/>
    <style name="TerminalApp.text.status.online">
        <item name="android:textColor">#FF2ebcb4</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TerminalApp.text.status.offline">
        <item name="android:textColor">#FFbc2e63</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>